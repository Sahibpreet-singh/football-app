<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Football Match Fixer</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white">

  <!-- Navbar -->
  <nav class="flex justify-between items-center p-6 bg-gray-800 shadow-lg">
    <h1 class="text-2xl font-bold text-white">MatchFixer Pro</h1>
    <div class="flex items-center gap-4">
        <% if (user) { %>
          <h2>Hello, <%= user.displayName %></h2>
          <a href="/logout" class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded text-white font-semibold">
            Logout
          </a>
        <% } %>
      </div>
  </nav>

  <!-- Clans Page Section -->
  <section class="max-w-4xl mx-auto py-16">
    
    
    <h1 class="text-3xl text-white font-bold mb-6">All Clans</h1>

    <!-- Create Clan Button -->
    <a href="/clans/create" class="bg-green-600 px-6 py-3 rounded text-white hover:bg-green-700 transition duration-200 ease-in-out shadow-lg mb-6 inline-block">
        âž• Create Clan
    </a>

    <!-- Clan List -->
    <ul class="space-y-6">
      <% clans.forEach(clan => { %>
        <li class="p-6 bg-gray-800 rounded-lg shadow-xl text-white transition duration-300 ease-in-out hover:bg-gray-700">
          <h2 class="text-2xl font-semibold mb-2"><%= clan.name %></h2>
          <p class="text-gray-400 mb-2">Admin: <%= clan.admin?.displayName || 'Unknown' %></p>
          <p class="text-gray-400 mb-2">Members:</p>
          <ul class="ml-4 list-disc">
            <% clan.members.forEach(member => { %>
              <li><%= member.displayName %></li>
            <% }) %>
          </ul>
        </li>
      <% }) %>
    </ul>
  </section>

  <!-- Footer -->
  <footer class="text-center p-6 bg-gray-800">
    <p class="text-gray-400">&copy; 2025 MatchFixer Pro. All rights reserved.</p>
  </footer>

</body>
</html>
